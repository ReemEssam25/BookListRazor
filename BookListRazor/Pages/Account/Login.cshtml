@page
@model BookListRazor.Pages.Account.LoginModel
@{
}


<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="credential.UserName"></label>
            </div>

            <div class="col-5">
                <input type="text" asp-for="credential.UserName" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-summary="credential.UserName"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="credential.Password"></label>
            </div>

            <div class="col-5">
                <input type="password" asp-for="credential.Password" class="form-control" />
                <span class="text-danger" asp-validation-summary="credential.Password"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary form-control" value="Login" />
            </div>

            <div class="col-1">
            </div>

            <div class="col-2">
                <a asp-page="Register" class="btn btn-info form-control">Register</a>
            </div>

            <div class="col-2">
            </div>
        </div>
    </form>
</div>
